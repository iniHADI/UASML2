<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fitur"
    tools:context=".FiturActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="FITUR"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black" />

    </RelativeLayout>

    <!-- Content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/Cream2"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Age : Age of the patient"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Sex : Sex of the patient"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• cp : Chest Pain type"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• trtbps : resting blood pressure"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• chol : cholestoral"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• (fasting blood sugar)(1 = true; 0 = false)"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• rest_ecg : resting electrocardiographic results"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• thalach : maximum heart rate achieved"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• exang: exercise induced angina (1 = yes; 0 = no)"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• oldpeak: Previous peak"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• slp: Slope"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• caa: number of major vessels (0-3)"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• thall: Thal rate"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• output: Target variable"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>